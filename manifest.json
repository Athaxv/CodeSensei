{
  "manifest_version": 3,
  "name": "CodeSensei",
  "version": "1.0.0",
  "description": "Enhance your coding experience on competitive programming platforms",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://practice.geeksforgeeks.org/*",
    "https://www.codingninjas.com/*",
    "https://codeforces.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://practice.geeksforgeeks.org/*",
        "https://www.codingninjas.com/*",
        "https://codeforces.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 